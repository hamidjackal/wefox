{
  "testEnvironment": "node",
  "verbose": true,
  "silent": false,
  "testRegex": ["\\.(unit.spec)\\.[jt]sx?$"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "coverage"
}
